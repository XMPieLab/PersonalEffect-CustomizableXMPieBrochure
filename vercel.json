{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.+\\.[a-f0-9]{8}\\.(js|css))",
      "dest": "server.js"
    },
    {
      "src": "/(.*\\.(png|jpg|jpeg|svg|ico))",
      "dest": "public/$1",
      "headers": { "Cache-Control": "public, max-age=3600" }
    },
    {
      "src": "/(.*\\.(css|js))",
      "dest": "public/$1",
      "headers": { "Cache-Control": "public, max-age=3600" }
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ]
}
